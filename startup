term.setBackgroundColor(colors.black)
term.clear()
img = paintutils.loadImage("os/pic/logo")
for y = 1,#img do
  for x = 1,#img[y] do
    if img[y][x]==1 then
      term.setCursorPos(x,y)
      term.setBackgroundColor(colors.white)
      write(" ")
      term.setBackgroundColor(colors.black)
    end
  end
end
sleep(1)
for y = 1,#img do
  if not img[y][1]==nil then
    for x = 1,#img[y] do
      if img[x]==8 then
        term.setCursorPos(x,y)
        term.setBackgroundColor(8)
        write(" ")
        term.setBackgroundColor(colors.black)
      end
    end
  end
end
sleep(1)
for y = 1,#img do
  if not img[y]==nil then
    for x = 1,#img[y] do
      if img[x]==512 then
        term.setCursorPos(x,y)
        term.setBackgroundColor(512)
        write(" ")
        term.setBackgroundColor(colors.black)
      end
    end
  end
end
sleep(1)
for y = 1,#img do
  if not img[y]==nil then
    for x = 1,#img[y] do
      if img[x]==2048 then
        term.setCursorPos(x,y)
        term.setBackgroundColor(2048)
        write(" ")
        term.setBackgroundColor(colors.black)
      end
    end
  end
end
sleep(2)
if true then
  shell.run("os/synergy/ui/firstTime")
else
  shell.run("os/synergy/ui/login")
end
